<div class="container">
  <h1>QueueWalls#index</h1>
  <% @ranges.each do |q|  %>

    <div class="card-category d-flex flex-column justify-content-between" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
      <div class="d-flex justify-content-between w-100">
        <div class="title">
          <h4><%= q.name %></h4>
        </div>
        <div class="weather-status">
          <h4 class="px-3"><i class="fas fa-cloud"></i></h4>
        </div>
      </div>
      <div class="d-flex justify-content-between w-100 align-items-end">
        <div class="traffic-status mb-0">
          <h4><i class="fas fa-car"></i><%= ": #{rand(1..23)} mins" %></h4>
        </div>

        <div class="queue-status d-flex justify-content-between">
          <% @queues.by_range(q.id).each do |q| %>
            <div class="level-queue d-flex flex-column px-3 align-items-center">
              <small><%= "#{q.level}"%></small>
              <small><%= "#{q.queue_length} pax"%></small>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
